<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="380dp"
		android:orientation="vertical"
		android:gravity="center_horizontal">

	<TextView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="Large Text"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:background="@color/verdana"
			android:textColor="@color/isopor"
			android:textSize="38sp"
			android:padding="20dp"
			android:textAlignment="center"
			android:id="@+id/cardconfirmdialoglayoutTitle"/>

	<TextView
			android:layout_height="160dp"
			android:layout_width="match_parent"
			android:padding="10dp"
			android:typeface="sans"
			android:textAlignment="inherit"
			android:layout_weight="1.0"
			android:id="@+id/cardconfirmdialoglayoutNotas"
			android:textSize="18sp"
			android:textIsSelectable="true" />

	<TableRow
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:gravity="end|bottom"
			android:background="#EBEBEB"
			android:layout_weight="1.0"
			android:padding="2dp">

		<Button
				android:layout_height="wrap_content"
				style="?android:attr/buttonStyleSmall"
				android:text="@string/putoff"
				android:layout_width="wrap_content"
				android:background="#EBEBEB"
				android:id="@+id/cardconfirmdialoglayoutButtonPutoff"
				android:textColor="#767676"
				android:padding="16dp"/>

		<Button
				android:layout_height="wrap_content"
				style="?android:attr/buttonStyleSmall"
				android:text="@string/completed"
				android:layout_width="wrap_content"
				android:background="#EBEBEB"
				android:textColor="#767676"
				android:id="@+id/cardconfirmdialoglayoutButtonCompleted"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:padding="16dp"/>

	</TableRow>

</LinearLayout>

